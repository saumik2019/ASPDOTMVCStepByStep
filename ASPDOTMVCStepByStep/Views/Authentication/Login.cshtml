@using ASPDOTMVCStepByStep.Models
@model UserDetails
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div style="margin: auto;
    width: 400px;
    text-align: center;
    margin-top: 200px;">
        <img src="~/Content/logo.jpg" alt=""/> 
    </div>
    <div style="margin:auto; width:400px;padding: 10px 10px 10px 147px;"> 
        @Html.ValidationMessage("CredentialError",new { style="color:red;"})
        @using (Html.BeginForm("DoLogin", "Authentication", FormMethod.Post))
        {
        <table>
            <tr>
                <td>@Html.LabelFor(c => c.UserName)</td>                
                <td>@Html.TextBoxFor(c => c.UserName)</td>                
            </tr>
            <tr>
                <td>@Html.ValidationMessageFor(c => c.UserName)</td>                
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Password)</td>                
                <td>@Html.TextBoxFor(c => c.Password)</td>                
            </tr>
            <tr style="text-align:right">
                <td colspan="2"><input type="submit" id="btnSubmit" name="btnSubmit" value="Login" /></td>                
            </tr>
        </table>
        }
    </div>
</body>
</html>
